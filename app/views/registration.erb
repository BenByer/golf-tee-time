<body>
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Enter your contact information</strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-md-6">

                </div>

                <div class="col-md-6">

                </div>

                <div class="clearfix"></div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div id="center" class="col-lg-12">
                    <hr>
                    Booking time: <%= @selected_date %> for party of <%= @num_golfers %>
                    <form method="post" action="/confirmation">
                        First name:<br>
                        <input type="text" name="first_name" value="<%= @user.first_name %>"><br>
                        Last name:<br>
                        <input type="text" name="last_name" value="<%= @user.last_name %>"><br>
                        Email:<br>
                        <input type="text" name="email" value="<%= @user.email %>"><br>
                        Phone number:<br>
                        <input type="integer" name="phone" value="<%= @user.phone %>"><br>
                        <input type="submit" value="Submit">

                    </form>


                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; Okanagan Swag</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>