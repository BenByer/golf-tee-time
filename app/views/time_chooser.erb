<body>
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Choose session time</strong>
                    </h2>
                    <hr>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12"> 
                    <table class="table">
                      <p>Pick a time on <%= @selected_date %> from 7:00am to 3:00pm</p>
                      <hr>
                      <div id="calendar"></div>
                      <% count = 0 %>
                      <td>Time</td><td> Golfers Booked</td>
                      <% (7..15).each do |num| %>
                      <% (0..45).each do |minute| %>
                      <% if (minute % 15 == 0) %>
                        <% count += 1 %>
                        <tr>
                            <td>
                                <%= num %>:<%= if minute==0 then "00" else minute.to_s end %><br>
                            </td>
                        <td>

                        <% found_booking = false                        
                        time_string = @selected_date + " " + num.to_s + ":" + minute.to_s + ":00"
                        booking_string = @selected_date + " " + num.to_s + ":" + minute.to_s
                        @times.each do |time|
                            if time.tee_time_at == time_string
                              found_booking = true %>
                            
                            <%= time.golfer_count %>
                          <% end
                          end %>
                        <% if !found_booking %>
                           
                        <a href="/signin/?date=<%= booking_string %>&party=<%= @num_golfers %>" class="timebutton"> Book</a>
                   
                          <% end %> 
                        </td>
                      <% end  #15 minute modulus %>
                      <% end  #do each minute %>
                      
                      </tr>
                      
                      <% end %>
                    </table>
                
                      

                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
 

</body>