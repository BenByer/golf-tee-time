<body>
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>Choose session time</strong>
                    </h2>
                    <hr>
                </div>
                <div class="col-md-6">
               
                </div>
                <div class="col-md-6">
                   
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
 
                    <hr>
                    <table>
                      <p>Pick a time on <%= @selected_date %> from 7:00am to 3:00pm</p>
                        <% @times.each do |time| 
                             puts time.user_id 
                         end %>
                      <div id="calendar"></div>
                      <%= count = 0 %>
                      <td>Date</td><td> Golfers Booked</td>
                      <% (7..15).each do |num| %>
                      <% (0..45).each do |minute| %>
                      <% if (minute % 15 == 0) %>
                        <%= count += 1 %>
                        <tr>
                        <td>
                        <%= num %>:<%= if minute==0 then "00" else minute.to_s end %><br>
                        </td>
                        <td>

                        <%
                        found_booking = false
                        
                        time_string = @selected_date + " " + num.to_s + ":" + minute.to_s + ":00.00000"
                        booking_string = @selected_date + " " + num.to_s + ":" + minute.to_s
                        @times.each do |time|
                            if time.tee_time_at == time_string 
                              found_booking = true
                              %>
                            
                            <%= time.golfer_count %>
                          <% end
                          end %> 
                          <% if !found_booking %>
                           
                          <a href="/registration/?date=<%= booking_string %>&party=<%= @num_golfers %>"> Book This Time</a>
                   
                         <% end %> 
                          </td>
                      <% end  #15minut modulus %>
                      <% end  #do each minute %>
                      
                      </tr>
                      
                      <% end %>
                    </table>
                
                      

                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>
    <!-- /.container -->

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Copyright &copy; Okanagan Swag</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>